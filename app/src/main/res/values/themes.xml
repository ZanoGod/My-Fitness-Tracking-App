<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme after splash -->
    <style name="Theme.MyFitnessTrackingApp" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!-- background or gradient -->
        <item name="android:windowSplashScreenBackground">@color/splashColor</item>
<!--        <item name="android:windowSplashscreenContent">@drawable/ic_app_icon_text</item>-->

        <!-- use the *icon file itself*, not the layer-list -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splashscreen</item>

        <!-- animation duration -->
        <item name="android:windowSplashScreenAnimationDuration">300</item>

        <!-- theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.MyFitnessTrackingApp</item>
    </style>

</resources>
